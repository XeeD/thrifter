      = link_to "Popis výrobku", section_path("popis"), {"data-pjax-section" => true}
    %li
      = link_to "Dotaz", section_path("dotaz"), {"data-pjax-section" => true}
    %li
      = link_to "Splátky", section_path("splatky"), {"data-pjax-section" => true}
    %li
      = link_to "Porovnat s jinými", section_path("porovnavani"), {"data-pjax-section" => true}
