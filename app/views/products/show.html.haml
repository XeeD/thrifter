- cache product.model do
  %h1 Detail výrobku #{product.name}
  %p= Random.rand(100)
  %p= product.description

  = form_for :cart, url: cart_path, method: :post do |f|
    = f.hidden_field :product_id, {value: product.id}
    = f.hidden_field :quantity, {value: "1"}

    = f.submit "Vložit do košíku"

  %ul
    %li
      = link_to "Hodnocení", section_path("hodnoceni"), {"data-pjax-section" => true}
    %li
      = link_to "Popis výrobku", section_path("popis"), {"data-pjax-section" => true}
    %li
      = link_to "Dotaz", section_path("dotaz"), {"data-pjax-section" => true}
    %li
      = link_to "Splátky", section_path("splatky"), {"data-pjax-section" => true}
    %li
      = link_to "Porovnat s jinými", section_path("porovnavani"), {"data-pjax-section" => true}
    %li
      = link_to "Dodání", section_path("dodani"), {"data-pjax-section" => true}
    %li
      = link_to "Příslušenství", section_path("prislusenstvi"), {"data-pjax-section" => true}

  %div{"data-pjax-section-container" => true}