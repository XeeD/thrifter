%h2 Produkty

%ul.action_links
  %li.create_new= link_to "Přidat nový produkt", new_admin_product_path

- unless products.empty?
  %h3 Seznam produktů
  %table#products
    %thead
      %tr
        %th Název produktu
        %td Akce
    %tbody
      - for product in products
        %tr
          %th= product.name
          %td
            %ul.actions
              %li= link_to "Editovat", edit_admin_product_path(product)
              %li= link_to "Smazat", admin_product_path(product), :method => :delete